{
    "info": {
        "name": "Movie Service API",
        "description": "Complete API collection for testing Movie Service endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "movie-service-api-collection",
        "version": "1.0.0"
    },
    "item": [
        {
            "name": "Movie Management",
            "item": [
                {
                    "name": "Upload Movie (Direct)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": []
                                },
                                {
                                    "key": "data",
                                    "value": "{\\n  \"title\": \"Test Movie\",\\n  \"description\": \"A test movie uploaded via Postman\"\\n}",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/upload",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "upload"
                            ]
                        },
                        "description": "Upload a movie file directly (suitable for files < 100MB)"
                    },
                    "response": [],
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.data && response.data.movieId) {",
                                    "        pm.environment.set('movieId', response.data.movieId);",
                                    "        console.log('Movie ID saved:', response.data.movieId);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get Movie Status",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/{{movieId}}/status",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "{{movieId}}",
                                "status"
                            ]
                        },
                        "description": "Get the processing status of a movie"
                    },
                    "response": []
                },
                {
                    "name": "Get Movie Info",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/{{movieId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "{{movieId}}"
                            ]
                        },
                        "description": "Get detailed information about a movie"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Chunk Upload",
            "item": [
                {
                    "name": "1. Initiate Chunk Upload",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\\n  \"filename\": \"large_movie.mp4\",\\n  \"mimeType\": \"video/mp4\",\\n  \"totalSize\": 1073741824,\\n  \"chunkSize\": 5242880,\\n  \"movieTitle\": \"Large Test Movie\",\\n  \"movieDescription\": \"A large movie uploaded via chunk upload\"\\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/chunk-upload/initiate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "chunk-upload",
                                "initiate"
                            ]
                        },
                        "description": "Initiate a chunked upload session for large files"
                    },
                    "response": [],
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.data && response.data.uploadId) {",
                                    "        pm.environment.set('uploadId', response.data.uploadId);",
                                    "        console.log('Upload ID saved:', response.data.uploadId);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "2. Upload Chunk",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "chunk",
                                    "type": "file",
                                    "src": []
                                },
                                {
                                    "key": "data",
                                    "value": "{\\n  \"uploadId\": \"{{uploadId}}\",\\n  \"chunkNumber\": 0,\\n  \"chunkSize\": 5242880,\\n  \"checksum\": \"optional-md5-checksum\"\\n}",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/chunk-upload/{{uploadId}}/chunks/0",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "chunk-upload",
                                "{{uploadId}}",
                                "chunks",
                                "0"
                            ]
                        },
                        "description": "Upload a single chunk (repeat for each chunk with different chunk numbers)"
                    },
                    "response": []
                },
                {
                    "name": "3. Get Upload Status",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/chunk-upload/{{uploadId}}/status",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "chunk-upload",
                                "{{uploadId}}",
                                "status"
                            ]
                        },
                        "description": "Check the status and progress of a chunk upload session"
                    },
                    "response": []
                },
                {
                    "name": "4. Complete Upload",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/chunk-upload/{{uploadId}}/complete",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "chunk-upload",
                                "{{uploadId}}",
                                "complete"
                            ]
                        },
                        "description": "Complete the upload and merge all chunks into the final file"
                    },
                    "response": [],
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.data && response.data.movieId) {",
                                    "        pm.environment.set('movieId', response.data.movieId);",
                                    "        console.log('Movie ID saved:', response.data.movieId);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "5. Cancel Upload",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/chunk-upload/{{uploadId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "chunk-upload",
                                "{{uploadId}}"
                            ]
                        },
                        "description": "Cancel an ongoing upload session and clean up resources"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Utilities",
            "item": [
                {
                    "name": "Get JavaScript Client",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies/chunk-upload/client.js",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies",
                                "chunk-upload",
                                "client.js"
                            ]
                        },
                        "description": "Get the JavaScript client code for implementing chunk upload in frontend applications"
                    },
                    "response": []
                }
            ]
        }
    ],
